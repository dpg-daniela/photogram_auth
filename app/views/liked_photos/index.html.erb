<div class="container">


    <div class="row">
  <div class="col-md-8 col-md-offset-2">
  <% @user.liked_photos.each do |liked_photo| %>
    <div class="panel panel-default">
    
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= liked_photo.user.id%>"><%= liked_photo.user.username %></a>
          <small>
            <%= time_ago_in_words(liked_photo.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/photos/<%= liked_photo.id %>">
          <img src="<%= liked_photo.image %>" class="img-responsive">
        </a>
        <% end %>